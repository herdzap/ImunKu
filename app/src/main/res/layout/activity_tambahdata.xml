<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".InsertVaksinActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:id="@+id/formLayout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingHorizontal="32dp">

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="120dp"
                android:layout_height="120dp"
                android:layout_marginTop="32dp"
                app:srcCompat="@drawable/profil" />

            <TextView
                android:id="@+id/judulHalamanForm"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="28dp"
                android:text="Tambah Data Imunisasi"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/namaAnak"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_form_vaksin"
                android:ems="10"
                android:hint="@string/namaanak"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/umurAnak"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_form_vaksin"
                android:ems="10"
                android:hint="@string/umur_anak"
                android:inputType="textPersonName"
                android:padding="12dp" />

            <EditText
                android:id="@+id/tanggalLahir"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_form_vaksin"
                android:ems="10"
                android:hint="@string/tanggal_lahir"
                android:inputType="date"
                android:padding="12dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <EditText
                android:id="@+id/tanggalVaksin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_form_vaksin"
                android:ems="10"
                android:hint="@string/tanggal_vaksin"
                android:inputType="date"
                android:padding="12dp"
                android:clickable="false"
                android:cursorVisible="false"
                android:focusable="false"
                android:focusableInTouchMode="false"/>

            <Spinner
                android:id="@+id/jenisVaksin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_spinner_vaksin"
                android:ems="10" />

            <Spinner
                android:id="@+id/vaksinKe"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_spinner_vaksin"
                android:ems="10" />

            <ImageButton
                android:id="@+id/gambarVaksin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:background="@drawable/bg_form_upload_2"/>

            <ImageView
                android:id="@+id/previewVaksin"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:adjustViewBounds="true"
                tools:srcCompat="@tools:sample/avatars"
                android:maxHeight="200dp"
                android:layout_marginBottom="32dp"/>

            <Button
                android:id="@+id/simpanVaksin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                android:backgroundTint="@color/button_purple"
                android:text="Simpan Data"/>

            <Button
                android:id="@+id/batalVaksin"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="16dp"
                android:backgroundTint="@color/red_cancel"
                android:text="Batal"/>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>
